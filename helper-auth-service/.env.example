# ============================================
# Helper Auth Service - Environment Variables
# ============================================
# Copy this to .env and fill in your values
# DO NOT commit .env to version control!

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=helperdb
DB_USERNAME=helper_admin
DB_PASSWORD=change_me_in_production

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secret (generate a strong random string, min 256 bits)
# You can generate one with: openssl rand -base64 64
APP_JWT_SECRET=your_super_secret_jwt_key_change_this_minimum_256_bits

# Email (Gmail App Password or other SMTP provider)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# Spring Profile
SPRING_PROFILES_ACTIVE=dev
